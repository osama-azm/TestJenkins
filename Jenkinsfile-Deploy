pipeline {
  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          name: kubectl
        spec:
          containers:
          - name: kubectl
            image: docker.io/bitnami/kubectl
            command:
            - cat
            tty: true
            securityContext:
              runAsUser: 1000
      '''
    }
  }

    stages {
    stage('DoKubectl') {
      steps {
        container('kubectl') {
          sh 'kubectl version'
        }
      }
    }
  }
}
